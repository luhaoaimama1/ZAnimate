<?xml version="1.0" encoding="utf-8"?>
<zone.com.zanimate.view.ScrollerViewH xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View 动画："
            android:textColor="#000000"
            android:textSize="20sp" />

        <com.zone.view.list.NoScrollGridView
            android:id="@+id/gv_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera 动画："
            android:textColor="#000000"
            android:textSize="20sp" />

        <com.zone.view.list.NoScrollGridView
            android:id="@+id/gv_Camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3" />



    </LinearLayout>
</zone.com.zanimate.view.ScrollerViewH>