<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <zone.com.zanimate.view.Roll3DImageView_
            android:id="@+id/roll3DImageView_"
            android:background="#00ff00"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/aaaaaaaaaaaab" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/wave" />

        </zone.com.zanimate.view.Roll3DImageView_>

        <zone.com.zanimate.view.Roll3DImageView_Lib
            android:background="#00ff00"
            android:id="@+id/roll3DImageView_Lib"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/aaaaaaaaaaaab" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/wave" />

        </zone.com.zanimate.view.Roll3DImageView_Lib>
    </LinearLayout>


    <SeekBar
        android:id="@+id/atdv_seek_bar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:max="90" />
</RelativeLayout>